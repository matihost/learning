---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  labels:
    rbac.authorization.k8s.io/aggregate-to-view: "true"
  name: istio-view
rules:
- apiGroups:
  - "install.istio.io"
  - "networking.istio.io"
  - "security.istio.io"
  resources:
  - "*"
  verbs: ["get", "watch", "list"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  labels:
    rbac.authorization.k8s.io/aggregate-to-edit: "true"
  name: istio-edit
rules:
- apiGroups:
  - "networking.istio.io"
  resources:
  - "destinationrules"
  - "sidecars"
  - "virtualservices"
  - "serviceentries"
  verbs:
  - "*"
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  labels:
    rbac.authorization.k8s.io/aggregate-to-admin: "true"
  name: istio-admin
rules:
- apiGroups:
  - "install.istio.io"
  - "networking.istio.io"
  - "security.istio.io"
  resources:
  - "*"
  verbs:
  - "*"
