---
apiVersion: install.istio.io/v1alpha1
kind: IstioOperator
metadata:
  namespace: istio-system
  name: istiocontrolplane
spec:
  profile: default
  meshConfig:
    enableTracing: true
    accessLogFile: /dev/stdout
    accessLogEncoding: JSON
  components:
    cni:
      enabled: true
      namespace: {{ "kube-system" if options.gke_mode|default(false) else "istio-system" }}
    ingressGateways:
    - name: istio-ingressgateway
      enabled: true
{% if ingress_gateway.enable_node_selector|default(false) %}
      k8s:
        nodeSelector:
          node-role: "internal-ingress"
        tolerations:
        - key: "ingress-type"
          value: "internal"
          operator: "Equal"
          effect: "NoSchedule"
{% endif %}
    - name: istio-external-ingressgateway
      enabled: {{ ingress_external_gateway.enable|default(false) }}
      # namespace: custom-ns
      label:
        istio: external-ingressgateway
      k8s:
        env:
        - name: ISTIO_META_ROUTER_MODE
          value: standard
        hpaSpec:
          maxReplicas: 5
          metrics:
          - resource:
              name: cpu
              targetAverageUtilization: 80
            type: Resource
          minReplicas: 1
          scaleTargetRef:
            apiVersion: apps/v1
            kind: Deployment
            name: istio-external-ingressgateway
        resources:
          limits:
            cpu: 2000m
            memory: 1024Mi
          requests:
            cpu: 100m
            memory: 128Mi
        service:
          ports:
          - name: status-port
            port: 15021
            protocol: TCP
            targetPort: 15021
          - name: http2
            port: 80
            protocol: TCP
            targetPort: 8080
          - name: https
            port: 443
            protocol: TCP
            targetPort: 8443
          - name: tls
            port: 15443
            protocol: TCP
            targetPort: 15443
{% if ingress_external_gateway.serviceAnnotations|default(false) %}
        serviceAnnotations: {{ ingress_external_gateway.serviceAnnotations | to_yaml }}
{% endif %}
        service:
          type: {{ ingress_external_gateway.service_type|default("LoadBalancer") }}
        strategy:
          rollingUpdate:
            maxSurge: 100%
            maxUnavailable: 25%
{% if ingress_external_gateway.enable_node_selector|default(false) %}
        nodeSelector:
          node-role: "external-ingress"
        tolerations:
        - key: "ingress-type"
          value: "external"
          operator: "Equal"
          effect: "NoSchedule"
{% endif %}
    egressGateways:
    - name: istio-egressgateway
      enabled: {{ egress_gateway.enable|default(false) }}
      #k8s:
      #  nodeSelector:
      #    node-role: "egress"
      #  tolerations:
      #  - key: "egress"
      #    operator: "Exists"
      #    effect: "NoSchedule"
  values:
    global:
      logAsJson: true
{% if options.gke_mode|default(false)  %}
    # TODO fix stackdriver metrics: https://github.com/istio/istio/issues/22658
    telemetry:
      enabled: true
      v2:
        stackdriver:
          enabled: true
          inboundAccessLogging: FULL
          outboundAccessLogging: FULL
          logging: true
          monitoring: true
          topology: true
{% endif %}
    cni:
{% if options.gke_mode|default(false)  %}
      cniBinDir: /home/kubernetes/bin
{% endif %}
      excludeNamespaces:
       - istio-system
       - kube-system
      logLevel: info
    gateways:
      istio-ingressgateway:
        type: {{ ingress_gateway.service_type|default("LoadBalancer") }}
        autoscaleMax: "{{ ingress_gateway.max_pods|default(5)}}"
{% if ingress_gateway.serviceAnnotations|default(false) %}
        serviceAnnotations: {{ ingress_gateway.serviceAnnotations | to_yaml }}
{% endif %}
